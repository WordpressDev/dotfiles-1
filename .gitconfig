[user]
	name = JuanPablo
	email = jpabloaj@gmail.com

[diff]
    color = auto

[pager]
    color = true

[status]
    color = auto
[push]
	default = current
[alias]
	st = status
	ci = commit
	br = branch
	ba = branch -a
	co = checkout
	df = diff
	dc = diff --cached
	d0 = diff -U0
	ds = diff --stat
	dt = difftool
	ru = remote update
	ra = remote add
	m = merge
	mo = merge origin
	mt = mergetool
	fe = fetch
	fo = fetch origin
	lo = log --graph --pretty=format:'%Cgreen%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative HEAD..origin/master
	lg = log --graph --pretty=format:'%Cgreen%h%Creset %C(blue)%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr, %ci)' --abbrev-commit --date=relative
	l = log --graph --pretty=format:'%Cgreen%h%Creset %C(blue)%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr, %ci)' --abbrev-commit --date=relative -n
	ls = ls-files
	rh = reset --hard
	rhom = reset --hard origin/master
    rv = remote -v
	cf = clean -fd
	suir = submodule update --init --recursive
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[core]
	editor = vim
	excludesfile = ~/.gitexcludes
[difftool]
	prompt = false
[mergetool]
	prompt = false
